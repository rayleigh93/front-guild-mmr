{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,      
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "paths": {
            "myAlias/*": ["./*"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    // Pour traiter les fichiers .vue
    "files": [
        "./vue-shims.d.ts"
    ]
}